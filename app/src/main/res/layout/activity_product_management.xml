<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="app.wind.crystalbox.Product.ProductManagement">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="1"
        >

   <Button
       android:id="@+id/hot"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Hot"
       android:textColor="#ffffff"
       android:background="#D74B4C"
       android:layout_margin="10dp"
       />
    <Button
        android:id="@+id/ice"
        android:layout_below="@+id/hot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ice"
        android:textColor="#ffffff"
        android:background="#96C8EB"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/frappe"
        android:layout_below="@+id/ice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Frappe"
        android:textColor="#ffffff"
        android:background="#00AA4F"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/cake"
        android:layout_below="@+id/frappe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cake"
        android:textColor="#ffffff"
        android:background="#F49A80"
        android:layout_margin="10dp"
        />

    <Button
        android:id="@+id/food"
        android:layout_below="@+id/cake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food"
        android:textColor="#ffffff"
        android:background="#FCA44B"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/alcohal"
        android:layout_below="@+id/food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alcohal"
        android:textColor="#ffffff"
        android:background="#CECECE"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/other"
        android:layout_below="@+id/alcohal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other"
        android:textColor="#ffffff"
        android:background="#FFD843"
        android:layout_margin="10dp"
        />

        <Button
            android:id="@+id/option"
            android:layout_below="@+id/other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option"
            android:textColor="#ffffff"
            android:background="#9b59b6"
            android:layout_margin="10dp"
            />
    </TableLayout>
    </ScrollView>

</RelativeLayout>
