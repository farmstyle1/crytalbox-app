<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.wind.crystalbox.Queue.Queue"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/servedList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <Button
            android:id="@+id/servedBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="รายการที่เสริฟแล้ว"
            android:textColor="#ffffff"
            android:background="#00AA4F"
            android:layout_marginBottom="10dp"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/queueList"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/lisViewHead"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <TextView

                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#e74c3c"
                android:gravity="center"

                android:text="Item"
                android:textColor="#ffffff" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#e74c3c"
                android:gravity="center"

                android:text="Option"
                android:textColor="#ffffff" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#e74c3c"
                android:gravity="center"

                android:text="Qty"
                android:textColor="#ffffff" />


            <TextView

                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#e74c3c"
                android:gravity="center"

                android:text="Table"
                android:textColor="#ffffff" />


            <Button

                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#e74c3c"
                android:gravity="center"
                android:text="Status"
                android:textColor="#ffffff" />

        </LinearLayout>

        <ListView
            android:id="@+id/listViewQueue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lisViewHead"></ListView>
    </LinearLayout>





</LinearLayout>
