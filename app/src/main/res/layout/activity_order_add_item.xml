<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.wind.crystalbox.Order.OrderAddItem">

    <LinearLayout
        android:id="@+id/line1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/hot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Hot"
            android:textColor="#ffffff"
            android:background="#e74c3c"
            android:layout_weight="1"
            android:layout_margin="4dp"

            />
        <Button
            android:id="@+id/ice"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Ice"
            android:textColor="#ffffff"
            android:background="#3498db"
            android:layout_weight="1"
            android:layout_margin="4dp"

            />
        <Button
            android:id="@+id/frappe"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Frappe"
            android:textColor="#ffffff"
            android:background="#2ecc71"
            android:layout_weight="1"
            android:layout_margin="4dp"

            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/line2"
        android:layout_below="@+id/line1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <Button
            android:id="@+id/cake"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Cake"
            android:textColor="#ffffff"
            android:background="#e67e22"
            android:layout_weight="1"
            android:layout_margin="4dp"

            />

        <Button
            android:id="@+id/food"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Food"
            android:textColor="#ffffff"
            android:background="#1abc9c"
            android:layout_weight="1"
            android:layout_margin="4dp"

            />
        <Button
            android:id="@+id/alcohal"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Alcohal"
            android:textColor="#ffffff"
            android:background="#f1c40f"
            android:layout_weight="1"

            />
        <Button
            android:id="@+id/other"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Other"
            android:textColor="#ffffff"
            android:background="#9b59b6"
            android:layout_weight="1"
            android:layout_margin="4dp"


            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/line3"
        android:layout_above="@+id/line4"
        android:layout_below="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/line4"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/addItemDone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Done"
             android:textColor="#ffffff"
            android:background="#2ecc71"
            android:layout_margin="4dp"/>

    </RelativeLayout>







</RelativeLayout>
